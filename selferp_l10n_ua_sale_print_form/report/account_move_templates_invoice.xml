<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="account_move_template_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <t t-set="o" t-value="o.with_context(lang='uk_UA')"/>
                    <t t-set="currency" t-value="o.currency_id"/>

                    <div class="page">
                        <div class="row mb-4">
                            <div class="col-8">
                                <h2>
                                    <span t-if="o.move_type == 'out_refund' or o.move_type == 'in_refund'">Накладна на повернення</span>
                                    <span t-else="">Видаткова накладна</span>
                                </h2>
                            </div>
                            <div class="col-4">
                                <div id="informations">
                                    <div class="top-information-elem">
                                        <strong>№</strong>
                                        <span t-if="o.name != '/' and '/' in o.name" t-esc="o.name.split('/', 1)[1]"/>
                                        <span t-else="" t-esc="o.name"/>
                                    </div>
                                    <div t-if="o.invoice_date" class="top-information-elem" name="invoice_date">
                                        <strong>Дата:</strong>
                                        <span t-esc="o.invoice_date.strftime('%d.%m.%Y')"/>
                                    </div>
                                    <div t-if="o.assembly_location" class="top-information-elem" name="reference">
                                        <strong>Місце складання:</strong>
                                        <span t-field="o.assembly_location"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="report-custom-template-content-contacts mb-4">
                            <div class="row">
                                <div class="col-4">
                                    <div class="contact-elem">
                                        <div class="title">Постачальник</div>
                                        <div class="text">
                                            <t t-esc="o.company_id.name"/><br/>
                                            <t t-if="o.company_id.company_registry">
                                                Код за ЄДРПОУ: <t t-esc="o.company_id.company_registry"/><br/></t>
                                            <t t-if="o.company_id.phone">
                                                тел.: <t t-esc="o.company_id.phone"/><br/></t>
                                            <t t-esc="o._get_custom_address()"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="contact-elem">
                                        <div class="title">Покупець</div>
                                        <div class="text">
                                            <t t-esc="o.partner_id.name"/><br/>
                                            <t t-if="o.partner_id.company_registry">
                                                Код за ЄДРПОУ: <t t-esc="o.partner_id.company_registry"/><br/></t>
                                            <t t-if="o.partner_id.phone">
                                                тел.: <t t-esc="o.partner_id.phone"/><br/></t>
                                            <t t-esc="o._get_custom_address(True)"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="contact-elem">
                                        <div class="title">Підстава</div>
                                        <div class="text" id="contract_variant">Рахунок</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-8">
                                    <div t-if="o.company_id.general_bank_account_id and o.company_id.general_bank_account_id.acc_number" class="contact-elem">
                                        <span class="title">Банківський рахунок:</span> <t t-esc="o.company_id.general_bank_account_id.acc_number" /><br/>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date" class="contact-elem">
                                        <span class="title">Термін сплати:</span> <t t-esc="o.invoice_date_due.strftime('%d.%m.%Y')"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table class="table table-sm o_main_table" name="sales_invoice_line_table">
                            <thead>
                                <tr>
                                    <th name="th_num" class="text-center"><span>№</span></th>
                                    <th name="th_description" class="text-start"><span>Назва</span></th>
                                    <th name="th_quantity" class="text-end"><span>Од.</span></th>
                                    <th name="th_quantity" class="text-end"><span>Кількість</span></th>
                                    <th name="th_subtotal" class="text-end"><span>Ціна</span></th>
                                    <th name="th_total" class="text-end"><span>Сума</span></th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <tr>
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td class="text-center"><t t-esc="line_index+1"/></td>
                                            <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                            <td class="text-end"><span t-esc="line.product_uom_id.name"/></td>
                                            <td class="text-end"><span t-esc="line.quantity"/></td>
                                            <td t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-esc="line.quantity and line.quantity > 0 and babel_numbers.format_currency(line.price_subtotal/line.quantity, '') or babel_numbers.format_currency(line.price_unit, '')"/>
                                            </td>
                                            <td class="text-end o_price_total">
                                                <span class="text-nowrap" t-esc="babel_numbers.format_currency(line.price_subtotal, '')" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div style="page-break-inside: avoid;">
                            <div id="total" class="report-custom-template-total-block row">
                                <div class="text-side col-7">
                                    <p><span class="title">Всього найменувань:</span> <t t-esc="len(o.invoice_line_ids)"/></p>
                                    <p><span class="title">Всього на суму:</span> <t t-esc="currency.amount_to_text(o.amount_residual)" /></p>
                                    <p t-if="o.amount_tax"><span class="title">у т.ч. ПДВ:</span> <t t-esc="currency.amount_to_text(o.amount_tax)" /></p>
                                </div>
                                <div class="pdv-side col-5">
                                    <table class="table pdf-table" style="page-break-inside: avoid;">
                                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                                        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                            <tr>
                                                <td class="title">Разом без ПДВ:</td>
                                                <td class="text-end">
                                                    <span t-att-class="oe_subtotal_footer_separator" t-esc="babel_numbers.format_currency(subtotal['amount'], '')"/>грн.
                                                </td>
                                            </tr>
                                            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                            <t t-set="taxes" t-value="0"/>
                                            <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                                <t t-set="taxes" t-value="taxes + amount_by_group['tax_group_amount']"/>
                                            </t>
                                            <tr>
                                                <td class="title">ПДВ:</td>
                                                <td class="text-end">
                                                    <span t-esc="babel_numbers.format_currency(taxes, '')"/>грн.
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="not tax_totals['subtotals']">
                                            <tr>
                                                <td class="title">Разом без ПДВ:</td>
                                                <td class="text-end">
                                                    <span t-esc="babel_numbers.format_currency(tax_totals['amount_total'], '')"/>грн.
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="title">ПДВ:</td>
                                                <td class="text-end">
                                                    <span>0,00&#160;</span>грн.
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td class="title">Разом з ПДВ:</td>
                                            <td class="text-end">
                                                <span t-esc="babel_numbers.format_currency(tax_totals['amount_total'], '')"/>грн.
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="report-custom-template-signatures mb-5">
                                <div class="signature-block">
                                    <div class="title">Постачальник:</div>
                                    <div class="signature-field">
                                        <div class="signature-line"></div>
                                        <div class="sub-text"><i>(підпис)</i></div>
                                    </div>
                                </div>
                                <div class="signature-block">
                                    <div class="title">Покупець:</div>
                                    <div class="signature-field">
                                        <div class="signature-line"></div>
                                        <div class="sub-text"><i>(підпис)</i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


</odoo>
