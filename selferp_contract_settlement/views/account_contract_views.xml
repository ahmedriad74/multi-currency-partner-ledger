<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="account_contract_view_tree" model="ir.ui.view">
        <field name="name">account.contract.tree</field>
        <field name="model">account.contract</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active">
                <field name="active" invisible="1"/>
                <field name="display_name" string="Contract"/>
                <field name="partner_id" />
                <field name="name" />
                <field name="company_id"
                       groups="base.group_multi_company"
                       options="{'no_create': True}"
                       optional="hide"/>
            </tree>
        </field>
    </record>


    <record id="account_contract_view_form" model="ir.ui.view">
        <field name="name">account.contract.form</field>
        <field name="model">account.contract</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button"
                                name="action_view_sale_orders"
                                type="object"
                                icon="fa-pencil-square-o"
                                attrs="{'invisible': [('sale_order_count', '=', 0)]}">
                                <field string="Sale Orders" name="sale_order_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button"
                                name="action_view_purchase_orders"
                                type="object"
                                icon="fa-pencil-square-o"
                                attrs="{'invisible': [('purchase_order_count', '=', 0)]}">
                                <field string="Purchase Orders" name="purchase_order_count" widget="statinfo"/>
                        </button>
                        <button name="action_view_invoice"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                attrs="{'invisible': [('invoice_count', '=', 0)]}">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                        <button name="action_view_bill"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                attrs="{'invisible': [('bill_count', '=', 0)]}">
                                <field name="bill_count" widget="statinfo" string="Bills"/>
                        </button>
                        <button name="action_view_journal_items"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bars"
                                attrs="{'invisible': [('move_line_count', '=', 0)]}">
                                <field name="move_line_count" widget="statinfo" string="Journal Items"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>

                    <field name="id" invisible="1" />
                    <field name="active" invisible="1" />

                    <div class="oe_title">
                        <label for="name" />
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group name="contract_info" string="Contract info">
                            <field name="partner_id" readonly="context.get('default_partner_id')"/>
                            <field name="operation_type"/>
                            <field name="external_name"/>
                        </group>
                        <group name="contract_dates" string="Validity of the contract">
                            <field name="date_start" />
                            <field name="date_end" attrs="{'readonly': [('is_perpetual', '=', True)]}"/>
                            <field name="is_perpetual" />
                        </group>
                        <group>
                            <field name="currency_id" />
                            <field name="subtype" />
                            <field name="contract_id" attrs="{'invisible': [('subtype', '=', 'main')]}"/>
                            <field name="payment_term_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_account_contract_view_search" model="ir.ui.view">
        <field name="name">account.contract.search</field>
        <field name="model">account.contract</field>
        <field name="arch" type="xml">
            <search string="Search Contract">
                <field name="name"
                       string="Contract"
                       filter_domain="[
                            '|',
                                ('name', 'ilike', self),
                                ('partner_id', 'ilike', self),
                       ]"/>
                <field name="name"/>
                <field name="partner_id" operator="child_of"/>
                <filter name="filter_date_start" string="Date" date="date_start"/>
                <filter name="filter_no_active" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_partner" string="Partner" context="{'group_by': 'partner_id'}"/>
                </group>
           </search>
        </field>
    </record>


    <record id="account_contract_action" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">account.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create new contract
            </p>
        </field>
    </record>


    <record id="account_contract_action_customer" model="ir.actions.act_window">
        <field name="name">Customer contracts</field>
        <field name="res_model">account.contract</field>
        <field name="domain">[('operation_type', '=', 'sale')]</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_operation_type': 'sale'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create new customer contract
            </p>
        </field>
    </record>


    <record id="account_contract_action_vendor" model="ir.actions.act_window">
        <field name="name">Vendor contracts</field>
        <field name="res_model">account.contract</field>
        <field name="domain">[('operation_type', '=', 'purchase')]</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_operation_type':'purchase'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create new vendor contract
            </p>
        </field>
    </record>



    <menuitem id="account_contract_menu_customer"
              name="Customer contracts"
              action="account_contract_action_customer"
              groups="account.group_account_manager"
              parent="account.menu_finance_receivables"
              sequence="9999" />


    <menuitem id="account_contract_menu_vendor"
              name="Vendor contracts"
              action="account_contract_action_vendor"
              groups="account.group_account_manager"
              parent="account.menu_finance_payables"
              sequence="9999" />


</odoo>
