<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="view_account_bank_statement_line_form_edit" model="ir.ui.view">
        <field name="name">account.bank.statement.line.form</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account_accountant.view_bank_statement_line_form_bank_rec_widget"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_save_new']" position="replace"></xpath>
            <xpath expr="//button[@name='action_save_close']" position="attributes">
                <attribute name="string">Save</attribute>
            </xpath>
        </field>
    </record>


    <record id="view_bank_statement_line_kanban_bank_rec_widget" model="ir.ui.view">
        <field name="name">account.bank.statement.line.kanban.bank_rec_widget.inherit.selferp_contract_settlement</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account_accountant.view_bank_statement_line_kanban_bank_rec_widget"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='row2_col2']" position="after">
                <div id="row2_col3" t-if="!record.is_reconciled.raw_value"
                     class="o_field_many2manytags o_field_widget d-flex flex-row flex-nowrap">
                    <a type="object" name="action_edit_record_from_kanban" role="button" class="btn btn-secondary btn-sm">Edit</a>
                </div>
            </xpath>
        </field>
    </record>


</odoo>
