<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="sale_order_template_bill" inherit_id="selferp_l10n_ua_sale_print_form.sale_order_template_bill">
        <div id="contract_variant" position="replace">
            <div id="contract_variant" class="text">
                <span t-if="o.contract_id">
                    Договір №: <span class="text-nowrap"><t t-esc="o.contract_id.external_name"/></span><br/>
                    <t t-if="o.contract_id.date_start">від: <t t-esc="o.contract_id.date_start.strftime('%d.%m.%Y')"/></t>
                </span>
                <span t-else="">Рахунок</span>
            </div>
        </div>
    </template>


</odoo>
