<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit.selferp_l10n_ua_ext</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_pricelist_rules']//div[hasclass('o_stat_info')]/span[1]"
                   position="attributes">
                <attribute name="class">o_stat_text</attribute>
            </xpath>
            <xpath expr="//button[@name='open_pricelist_rules']//div[hasclass('o_stat_info')]/span[2]"
                   position="attributes">
                <attribute name="class">o_stat_text</attribute>
            </xpath>

            <field name="detailed_type" position="before">
                <field name="uktzed_code_id" options="{'no_create': True}"/>
                <field name="dkpp_code_id" options="{'no_create': True}"/>
            </field>
        </field>
    </record>


</odoo>
