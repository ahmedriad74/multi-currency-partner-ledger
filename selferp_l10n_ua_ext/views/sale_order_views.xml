<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.selferp_l10n_ua_ext</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <button id="create_invoice" position="replace">
                <button name="create_invoice_delivered"
                        type="object"
                        attrs="{'invisible': [('state', 'in', ('draft', 'cancel'))]}"
                        string="Create an Implementation Document"
                        class="btn-primary"
                        data-hotkey="q"/>
            </button>
            <button id="create_invoice_percentage" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </button>
        </field>
    </record>

</odoo>
